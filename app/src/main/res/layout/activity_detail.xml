<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".DetailActivity">
    <TextView
        android:id="@+id/editnama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:hint="Nama"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/editjudulbuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:hint="Judul Buku"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/namapengarang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:hint="Nama Pengarang"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/edittahun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:hint="Tahun Terbit"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/editjenisbuku"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:hint="Jenis Buku"
        android:textColor="@color/black"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/editpinjam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginTop="23dp"
        android:hint="Tanggal Meminjam"
        android:textColor="@color/black"
        android:textStyle="bold"/>

</LinearLayout>